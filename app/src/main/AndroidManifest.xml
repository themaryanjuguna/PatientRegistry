<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.maryannenjuguna.PatientRegistry">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Tukio"
        tools:targetApi="31">
        <activity
            android:name="com.maryannenjuguna.PatientRegistry.splashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.maryannenjuguna.PatientRegistry.RegistrationActivity"
            android:exported="false"
            android:label="Registration Successful"
            android:parentActivityName="com.maryannenjuguna.PatientRegistry.addActivity" />
        <activity
            android:name="com.maryannenjuguna.PatientRegistry.addActivity"
            android:exported="false"
            android:label="Add Patient"
            android:parentActivityName="com.maryannenjuguna.PatientRegistry.MainActivity" />
        <activity
            android:name="com.maryannenjuguna.PatientRegistry.MainActivity"
            android:exported="false"
            android:label="Patient Registry">
        </activity>
    </application>

</manifest>